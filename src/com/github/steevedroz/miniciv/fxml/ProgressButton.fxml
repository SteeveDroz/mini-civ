<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ProgressBar?>
<?import javafx.scene.layout.VBox?>

<fx:root alignment="CENTER" type="VBox" xmlns="http://javafx.com/javafx/8.0.65" xmlns:fx="http://javafx.com/fxml/1">
   <children>
      <ProgressBar fx:id="progress" prefWidth="200.0" progress="0.0" />
      <Button fx:id="button" mnemonicParsing="false" onMouseExited="#deactivate" onMousePressed="#activate" onMouseReleased="#deactivate" text="Button" />
   </children>
</fx:root>
